<div>
    <label>Product</label>
    <input type="text" name="product" placeholder="Product" value="<%=products.product%>">
</div>

<div>
    <label>Slug</label>
    <input type="text" name="slug" placeholder="Slug" value="<%=products.slug%>">
</div>

<div>
    <label>Category</label>
    <select class="product_category" name = "category">
        <%categories.forEach(category => {%>
            <%if (category.id === products.category) {%>
                <option selected label="<%=category.category%>" value="<%=category.id%>"></option>
            <%}else {%>
                <option label="<%=category.category%>" value="<%=category.id%>"><%=category.category%></option>
                <%}%>
        <%})%>
    </select>
</div>

<div>
    <label>Price</label>
    <input type="number" name="price" placeholder="Price" min="1" value="<%=products.price%>">
</div>

<div>
    <label>Image</label>
    <input type="file" name="cover" class="filepond">
</div>

<div>
    <label>Description</label>
    <textarea name="description" placeholder="Description"><%=products.description%></textarea>
</div>
